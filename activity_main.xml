<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        tools:context=".MainActivity">

        <!-- Hiển thị vị trí Cabin -->
        <TextView
            android:id="@+id/tvCabinPositionDisplay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cabin: --"
            android:textSize="24sp"
            android:textColor="#3F51B5"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/rounded_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <!-- Divider -->
        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvCabinPositionDisplay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tiêu đề bên trong Cabin -->

        <!-- Layout nút trong cabin -->
        <TextView
            android:id="@+id/tvInsideCabinTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="INSIDE THE CABIN"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider1" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutInsideCabin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_border_background"
            app:layout_constraintTop_toBottomOf="@id/tvInsideCabinTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/btnCabinFloor1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="FLOOR 1"
                android:textSize="20sp"
                android:backgroundTint="#4CAF50"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnCabinFloor2" />

            <Button
                android:id="@+id/btnCabinFloor2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="FLOOR 2"
                android:textSize="20sp"
                android:backgroundTint="#4CAF50"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnCabinFloor1"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/btnCabinFloor3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="FLOOR 3"
                android:backgroundTint="#4CAF50"
                android:textSize="20sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/btnCabinFloor1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnCabinFloor4" />

            <Button
                android:id="@+id/btnCabinFloor4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="FLOOR 4"
                android:textSize="20sp"
                android:backgroundTint="#4CAF50"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@id/btnCabinFloor2"
                app:layout_constraintStart_toEndOf="@id/btnCabinFloor3"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/btnCabinOpenDoor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="OPEN"
                android:textSize="20dp"
                android:textColor="@android:color/white"
                android:backgroundTint="#FFEB3B"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/btnCabinFloor3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnCabinCloseDoor" />

            <Button
                android:id="@+id/btnCabinCloseDoor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="CLOSE"
                android:textSize="20dp"
                android:textColor="@android:color/white"
                android:backgroundTint="#FFEB3B"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@id/btnCabinFloor4"
                app:layout_constraintStart_toEndOf="@id/btnCabinOpenDoor"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <!-- Tiêu đề BÊN NGOÀI CABIN -->

        <!-- Các tầng bên ngoài Cabin -->

        <TextView
            android:id="@+id/tvOutsideCabinTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="364dp"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="OUTSIDE THE CABIN"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/layoutOutsideCabin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/rounded_border_background"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvOutsideCabinTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Tầng 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Floor 1"
                    android:textSize="20sp"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/btnOutside_Floor1Up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#F44336"
                    android:text="SW UP"
                    android:textSize="15dp"
                    tools:ignore="TextSizeCheck" />
            </LinearLayout>

            <!-- Tầng 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Floor 2"
                    android:textSize="20sp"
                    android:textColor="#000000" />
                <Button
                    android:id="@+id/btnOutside_Floor2Up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#F44336"
                    android:text="SW UP"
                    android:layout_marginEnd="8dp" />
                <Button
                    android:id="@+id/btnOutside_Floor2Down"
                    android:layout_width="wrap_content"
                    android:backgroundTint="#F44336"
                    android:layout_height="wrap_content"
                    android:text="SW DOWN" />
            </LinearLayout>

            <!-- Tầng 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Floor 3"
                    android:textSize="20sp"
                    android:textColor="#000000" />
                <Button
                    android:id="@+id/btnOutside_Floor3Up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SW UP"
                    android:backgroundTint="#F44336"
                    android:layout_marginEnd="8dp" />
                <Button
                    android:id="@+id/btnOutside_Floor3Down"
                    android:layout_width="wrap_content"
                    android:backgroundTint="#F44336"
                    android:layout_height="wrap_content"
                    android:text="SW DOWN" />
            </LinearLayout>

            <!-- Tầng 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Floor 4"
                    android:textSize="20sp"
                    android:textColor="#000000" />
                <Button
                    android:id="@+id/btnOutside_Floor4Down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#F44336"
                    android:text="SW DOWN" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="680dp"
            android:text="Design by Duong Tran"
            android:textStyle="bold"
            android:textColor="#12B51A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.464"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
